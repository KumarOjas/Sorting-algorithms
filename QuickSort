package sorting;
public class quicksort {
private int array[];
private int length;

public void sort(int [] inputarr) {
if (inputarr==null||inputarr.length==0)
{
return;
}
this.array=inputarr;
length=inputarr.length;
quickSort(0,length-1);
}
private void quickSort(int lowerIndex,int higherIndex){
int i=lowerIndex;
int j=higherIndex;
int pivot=array[lowerIndex+(higherIndex-lowerIndex)/2];
while(i<=j){
while(array[i]<pivot){
i++;
}
while(array[i]>pivot){
j--;
}
if(i<=j) {
exchangeNumbers(i,j);
i++;
j--;
}}
if (lowerIndex<j)
   quickSort(lowerIndex,j);
   if(i<higherIndex)
   quicksort(i,higher index);
   }
   
   
   private void exchangeNumbers(int i,intj);
   {
   int temp=array[i];
   array[i]=array[j];
     array[j=temp;
     }
     public static void main(String args[])
     {
     quicksort sorter=new quicksort();
     int[] input={20,63,2,1,9,4,5,6};
     sorter.sort(input);
     System.out.print(i);
     System.out.println("");
     }}}
     
     output:1 2 4 5 6 20 63
     
     
     
     
     
     
     
     
     
     
     
     
     
   
   
   
   
   
   
   
   
   
   
   
   
   
   

